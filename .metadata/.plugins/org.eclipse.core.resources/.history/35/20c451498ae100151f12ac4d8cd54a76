package application;

import java.net.URL;
import java.text.NumberFormat;
import java.util.ResourceBundle;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.Initializable;
import javafx.scene.*;
import javafx.scene.control.*;

public class TipController {

	NumberFormat formatter = NumberFormat.getCurrencyInstance();


		private double tip, tax, total = 0;
		
		@FXML
		private Button formatName;
		
		@FXML
		private TextField mealPrice;
		
		@FXML
		private Label formattedName;

		
		public void initialize(){
			
		}
		
		public void clickFormat(ActionEvent event){
			tip = Double.parseDouble(mealPrice.getText()) * 0.18;
			tax = Double.parseDouble(mealPrice.getText()) * 0.07;
			total = Double.parseDouble(mealPrice.getText()) +tax + tip
					;
			formattedName.setText("The meal was - "+formatter.format(mealPrice.getText())
								+"\nThe tip is "+formatter.format(tip)
								+"\nThe Tax is "+formatter.format(tax)
								+"\nThe Total is"+formatter.format(total)
					);
		}

		
	}


