package application;

import java.net.URL;
import java.util.ResourceBundle;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.Initializable;
import javafx.scene.*;
import javafx.scene.control.*;

public class SampleGuiController {

	@FXML
	private Button calculateButton;
	
	@FXML
	private TextField itemPrice;
	
	@FXML
	private TextField markupPercent;
	
	@FXML
	private Label markupTotal;
	
	public void initialize(){
		
	}
	
	public void buttonClick(ActionEvent event){
		hello1 = markupPercent.getText();
		hello4 = Double.parseDouble(hello1);
		hello3 = itemPrice.getText();
		hello2 = Double.parseDouble(hello3);
		markupTotal.setText("The total price markup is "+((hello2 * hello4 /100)+hello2));
}
